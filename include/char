#ifndef MISC_CORE_CHAR
#define MISC_CORE_CHAR

#include <stdbool.h>

#import <option>

typedef struct {
    int (*code)(char);
    option(char)(*chr)(int);
    char* (*escaped)(char);
    bool (*is_alpha)(char);
    bool (*is_num)(char);
    bool (*is_alphanum)(char);
    bool (*is_uppercase)(char);
    bool (*is_lowercase)(char);
    char (*lowercase)(char);
    char (*uppercase)(char);
    int (*compare)(char, char);
} char_mod;

extern const char_mod Char;

#endif
